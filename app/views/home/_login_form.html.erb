<%= stylesheet_link_tag "login-box" %>
<div id="login-box">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<H1>Login</H1>
	<br />
	<div id="login-box-name" style="margin-top:20px;">Email:</div>
	<div id="login-box-field" style="margin-top:20px;">
	  <%= f.email_field :email, :class=> "form-login", :size=> "30" %>
	</div>
	<div id="login-box-name">Password:</div>
	<div id="login-box-field">
	  <%= f.password_field :password, :class=> "form-login", :size=> "30" %>
	</div>
<br />
<span class="login-box-options">
	<%= link_to "Sign Up", signup_path %>
	<%= link_to "Forgot password?", forgot_password_path,:style => "margin-left:30px;" %>
</span>
<br/>
<br/>
<%= ("&nbsp;" * 30).html_safe %><%= f.submit "Login" %>
<% end %>
