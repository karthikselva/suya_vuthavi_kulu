Groups : <%= collection_select :select, :group, @groups, :id, :name, {:prompt => "Select"}, {:onchange => "load_members(this)"} %>

<div id="result"></div>	

<script>
  function load_members(ele)
  {
  	group_id = ele.value
  	if(group_id != "")
  	{
  		$.ajax
    ({
		  url: '<%= load_members_account_transactions_path %>',
		  data: { "group_id": group_id },
		  success: function(data) 
      {
		    $('#result').html(data);
		  }
		});
  	}
  	else
  	{
  		$('#result').html("")
  	}  
  }
</script>
