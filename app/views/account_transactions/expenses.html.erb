<h3 style='text-align:center'> Expenses </h3>
<br/>
<%= form_for(:group, :url => save_expenses_account_transactions_path, :method => "post") do %>
<table id="table_style">
    <tr>
        <th>Group</th>
        <th>Date</th>
        <th>Expense Amount</th>
        <th>Comments</th>  
    </tr>
    <tr>
        <td><%= collection_select :selected,:group_id, @groups, :id, :name, {:prompt => "Select"} %></td>
        <td><%= text_field :account_tran_detail, :transaction_date, :size => "6", :class => "datepicker", :value => Date.today.strftime("%d-%m-%Y") %></td>
        <td><%= text_field :account_tran_detail,:other_amount,:size=>"3"%></td>
        <td><%= text_area :account_tran_detail,:comments, :cols => 30, :rows => 2 %></td>
    </tr>
</table>
</br>
<div style='text-align:center'><%= submit_tag "save"%></div>
<% end %>